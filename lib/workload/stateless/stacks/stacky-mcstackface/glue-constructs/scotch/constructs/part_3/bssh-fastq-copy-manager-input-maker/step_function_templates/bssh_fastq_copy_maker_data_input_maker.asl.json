{
  "Comment": "A description of my state machine",
  "StartAt": "Move inputs",
  "States": {
    "Move inputs": {
      "Type": "Pass",
      "Parameters": {
        "inputs.$": "$"
      },
      "Next": "Get event data from ref db (Local)"
    },
    "Get event data from ref db (Local)": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:getItem",
      "Parameters": {
        "TableName": "${__table_name__}",
        "Key": {
          "id": "$.inputs.db_uuid",
          "id_type": "${__input_maker_type__}"
        }
      },
      "ResultSelector": {
        "input_event_data.$": "$.Item.input_event_data.M"
      },
      "ResultPath": "$.get_event_detail_payload_data_from_db_step",
      "Next": "Get OutputUri Prefix for BSSH Fastq Copy Manager"
    },
    "Get OutputUri Prefix for BSSH Fastq Copy Manager": {
      "Type": "Task",
      "Parameters": {
        "Name": "${__bclconvert_output_uri_ssm_parameter_name__}"
      },
      "Resource": "arn:aws:states:::aws-sdk:ssm:getParameter",
      "Next": "Generate inputs for BsshFastqCopyManager",
      "ResultSelector": {
        "output_uri_prefix.$": "$.Parameter.Value"
      },
      "ResultPath": "$.get_output_uri_prefix_parameter_step"
    },
    "Generate inputs for BsshFastqCopyManager": {
      "Type": "Pass",
      "Parameters": {
        "projectId.$": "$.get_event_detail_payload_data_from_db_step.input_event_data.projectId",
        "analysisId.$": "$.get_event_detail_payload_data_from_db_step.input_event_data.analysisId",
        "outputUri.$": "States.Format('{}__portal_run_id__/', $.get_output_uri_prefix_parameter_step.output_uri_prefix)"
      },
      "ResultPath": "$.set_output_event_data",
      "Next": "Add event data outputs (local)"
    },
    "Add event data outputs (local)": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${__table_name__}",
        "Key": {
          "id.$": "$.inputs.db_uuid",
          "id_type": "${__input_maker_type__}"
        },
        "UpdateExpression": "SET event_detail_output = :event_detail_output",
        "ExpressionAttributeValues": {
          ":output_event_data": {
            "M.$": "$.set_output_event_data"
          }
        }
      },
      "Next": "Wait 1 Second"
    },
    "Wait 1 Second": {
      "Type": "Wait",
      "Seconds": 1,
      "End": true
    }
  }
}
