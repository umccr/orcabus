{
  "Comment": "A description of my state machine",
  "StartAt": "Move Inputs",
  "States": {
    "Move Inputs": {
      "Type": "Pass",
      "Parameters": {
        "payload_data.$": "$.payload.data"
      },
      "Next": "Tumor Library in DB"
    },
    "Tumor Library in DB": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:getItem",
      "Parameters": {
        "TableName": "${__table_name__}",
        "Key": {
          "id.$": "$.payload_data.library.orcabusId",
          "id_type": "${__library_partition_name__}"
        }
      },
      "Next": "Check Tumor Library In DB"
    },
    "Check Tumor Library In DB": {
      "Type": "Choice",
      "Choices": [
        {
          "Next": "Get Workflow Parameters"
        }
      ],
      "Default": "Not an Automated Batch Workflow"
    },
    "Get Workflow Parameters": {
      "Type": "Parallel",
      "Next": "Generate Sash Ready Event",
      "Branches": [
        {
          "StartAt": "Generate Sash Payload",
          "States": {
            "Generate Sash Payload": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "OutputPath": "$.Payload",
              "Parameters": {
                "Payload": {
                  "dragen_somatic_dir.$": "",
                  "dragen_germline_dir.$": "",
                  "oncoanalyser_dir.$": ""
                }
              },
              "Retry": [
                {
                  "ErrorEquals": [
                    "Lambda.ServiceException",
                    "Lambda.AWSLambdaException",
                    "Lambda.SdkClientException",
                    "Lambda.TooManyRequestsException"
                  ],
                  "IntervalSeconds": 1,
                  "MaxAttempts": 3,
                  "BackoffRate": 2
                }
              ],
              "End": true
            }
          }
        },
        {
          "StartAt": "Get Portal Run ID and Workflow Run Name",
          "States": {
            "Get Portal Run ID and Workflow Run Name": {
              "Type": "Task",
              "Resource": "arn:aws:states:::states:startExecution.sync:2",
              "Parameters": {
                "StateMachineArn": "arn:aws:states:REGION:ACCOUNT_ID:stateMachine:STATE_MACHINE_NAME",
                "Input": {
                  "StatePayload": "Hello from Step Functions!",
                  "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID.$": "$$.Execution.Id"
                }
              },
              "End": true
            }
          }
        }
      ]
    },
    "Generate Sash Ready Event": {
      "Type": "Task",
      "Resource": "arn:aws:states:::states:startExecution.sync:2",
      "Parameters": {
        "StateMachineArn": "arn:aws:states:REGION:ACCOUNT_ID:stateMachine:STATE_MACHINE_NAME",
        "Input": {
          "StatePayload": "Hello from Step Functions!",
          "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID.$": "$$.Execution.Id"
        }
      },
      "End": true
    },
    "Not an Automated Batch Workflow": {
      "Type": "Pass",
      "End": true
    }
  }
}